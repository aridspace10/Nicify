{
    "Javascript": {
        "general": {
            "varDeclaration": ["var", "const", "let"],
            "stringTemplate": ["`", "${","}"],
            "semiColonBased": true,
            "importMethod": ["import"],
            "classMemberIdentifier": "this",
            "methodDeclaration": "function",
            "commenting": {
                "singleComment": "//",
                "multiLineComment" : ["/*", "*/"]
            },
            "jsonParam": "* @param {type} "
        },   
        "conventions": {
            "google": {
                "naming": {
                    "class": "UpperCamel",
                    "method": "LowerCamel",
                    "constant": "UpperAll"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": true,
                    "multiVarDeclaration": false
                },
                "functionDoc": {
                    "position": "top",
                    "tags": {"@param": "{type} desc","@return": "{type} desc"}
                }
            }  
        }
    },
    "Python": {
        "general": {
            "varDeclaration": [],
            "semiColonBased": false,
            "stringTemplate": ["f\"","{","}"],
            "classMemberIdentifier": "self",
            "methodDeclaration": "def",
            "commenting": {
                "singleComment": "//",
                "multiLineComment": ["\"\"\"","\"\"\""]
            },
            "jsonParam": "# "
        },
        "conventions": {
            "PEP 8": {
                "naming": {
                    "class": "LowerCamel",
                    "method": "SnakeCasing",
                    "variable": "SnakeCasing"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": false,
                    "multiVarDeclaration": false,
                    "breakBinarOperation": "Before"
                }
            }
        }
    },
    "C": {
        "general": {
            "varDeclaration": [],
            "semiColonBased": true,
            "stringTemplate": ["f\"","{","}"],
            "classMemberIdentifier": "",
            "methodDeclaration": "",
