{
    "Javascript": {
        "general": {
            "varDeclaration": ["var", "const", "let"],
            "semiColon": true,
            "classMemberIdentifier": "this",
            "methodDeclaration": "function",
            "commenting": {
                "singleComment": "//",
                "multiLineComment" : ["/*", "*/"]
            }
        },   
        "conventions": {
            "google": {
                "naming": {
                    "class": "UpperCamel",
                    "method": "LowerCamel",
                    "constant": "UpperAll"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": true,
                    "multiDeclaration": false
                },
                "functionDoc": {
                    "position": "top",
                    "tags": {"@param": "{type} desc","@return": "{type} desc"}
                }
            }  
        }
    },
    "Python": {
        "general": {
            "varDeclaration": [],
            "semiColon": false,
            "classMemberIdentifier": "self",
            "methodDeclaration": "def",
            "singleComment": "#",
            "multiLineComment": ["###","###"]
        },
        "conventions": {
            "PEP 8": {
                "naming": {
                    "class": "LowerCamel",
                    "method": "SnakeCasing",
                    "variable": "SnakeCasing"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": false,
                    "multiVarDeclaration": false,
                    "breakBinarOperation": "Before"
                }
            }
        }
    }
}