                "singleComment": "#",
                "multiLineComment": ["/*","*\\"]
            },
            "jsonParam": "@ "
        },
        "conventions": {
            "CSSE3010": {
                "naming": {
                    "class": null,
                    "method": "SnakeCasing",
                    "variable": "lowerCamel"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": true,
                    "multiVarDeclaration": false,
                    "breakBinarOperation": "Before"
                }
