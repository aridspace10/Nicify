{
    "Javascript": {
        "general": {
            "varDeclaration": ["var", "const", "let"],
            "semiColon": true,
            "classMemberIdentifier": "this"
        },   
        "conventions": {
            "google": {
                "naming": {
                    "class": "UpperCamel",
                    "method": "LowerCamel",
                    "constant": "UpperAll"
                },
                "limits": {
                    "column": 80,
                    "blockIndentation": 2
                },
                "rules": {
                    "semiColonAlways": true,
                    "multiDeclaration": false
                }
            }  
        }
    }
}